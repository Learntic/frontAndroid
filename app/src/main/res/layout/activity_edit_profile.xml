<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Edit_Profile">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Datos"
        android:textStyle="bold"
        android:textColor="#154360"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="50dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su informaciÃ³n de perfil es la siguiente:" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Nombre"
            android:shadowColor="#1f618d"
            android:textColor="#1f618d"
            android:textColorHighlight="#1f618d"
            android:textColorHint="#1f618d"
            android:textColorLink="#1f618d" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Edad"
            android:inputType="number"
            android:shadowColor="#1f618d"
            android:textColor="#1f618d"
            android:textColorHighlight="#1f618d"
            android:textColorHint="#1f618d"
            android:textColorLink="#1f618d"  />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Correo"
            android:shadowColor="#1f618d"
            android:textColor="#1f618d"
            android:textColorHighlight="#1f618d"
            android:textColorHint="#1f618d"
            android:textColorLink="#1f618d"  />

        <Space
            android:layout_width="match_parent"
            android:layout_height="63dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puede modificar cualquier campo que desee, para aplicarlos precione actualizar" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_sable_blue"
            android:text="Actualizar"
            android:textColor="#ffff"  />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/menu_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#154360"
            android:gravity="center" >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_icon"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_cours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#154360"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/book_icon"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#154360"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/friends_icon"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#154360"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_icon"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>